{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "types": ["bun-types", "vitest/globals"],

    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",

    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,

    "baseUrl": "./",
    "paths": {
      // absolute paths
      "@impl": ["src/_impl/Impl.ts"],
      "@booleans": ["src/booleans/Booleans.ts"],
      "@core": ["src/core/Core.ts"],
      "@functions": ["src/functions/Functions.ts"],
      "@match": ["src/match/Match.ts"],
      "@numbers": ["src/numbers/Numbers.ts"],
      "@objects": ["src/objects/Objects.ts"],
      "@std": ["src/std/Std.ts"],
      "@strings": ["src/strings/Strings.ts"],
      "@tuples": ["src/tuples/Tuples.ts"],
      "@unions": ["src/unions/Unions.ts"],

      // relative paths
      "@impl/*": ["src/_impl/*"],
      "@booleans/*": ["src/booleans/*"],
      "@core/*": ["src/core/*"],
      "@functions/*": ["src/functions/*"],
      "@match/*": ["src/match/*"],
      "@numbers/*": ["src/numbers/*"],
      "@objects/*": ["src/objects/*"],
      "@std/*": ["src/std/*"],
      "@strings/*": ["src/strings/*"],
      "@tuples/*": ["src/tuples/*"],
      "@unions/*": ["src/unions/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["./coverage/**/*", "./node_modules/**/*", "./dist/**/*"]
}
