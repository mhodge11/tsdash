{
  "name": "@tsdash/decorator",
  "version": "0.0.1",
  "description": "A TypeScript utility library for decorators",
  "type": "module",
  "engines": {
    "node": "^18.17.1",
    "yarn": "^1.22.19"
  },
  "engineStrict": true,
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "bun run test && bun run build && cp '../README.md' './README.md' && cp '../LICENSE' './LICENSE'",
    "postpublish": "rm './README.md' && rm './LICENSE'",
    "test": "vitest run --coverage",
    "test:dev": "vitest --ui"
  },
  "homepage": "https://tsdash.io",
  "bugs": {
    "url": "https://github.com/mhodge11/tsdash/issues",
    "email": "bugs@tsdash.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mhodge11/tsdash.git",
    "directory": "packages/decorator"
  },
  "keywords": [
    "lodash",
    "moderndash",
    "decorator",
    "decorators",
    "utility",
    "helper",
    "underscore",
    "esm",
    "typescript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    ">2% and not dead"
  ],
  "license": "MIT",
  "author": "Micah Hodge <micahhodgeutk@icloud.com> (https://github.com/mhodge11)",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./lib/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@tsdash/function": "workspace:*"
  }
}
