{
  "name": "@tsdash/hook",
  "version": "0.0.1",
  "description": "A TypeScript library for React hooks",
  "type": "module",
  "engines": {
    "node": ">=18.19.0",
    "pnpm": ">=8.12.1"
  },
  "engineStrict": true,
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "pnpm run test && pnpm run build && cp '../README.md' './README.md' && cp '../LICENSE' './LICENSE'",
    "postpublish": "rm './README.md' && rm './LICENSE'",
    "test": "vitest run --coverage",
    "test:dev": "vitest --ui"
  },
  "homepage": "https://tsdash.io",
  "bugs": {
    "url": "https://github.com/mhodge11/tsdash/issues",
    "email": "bugs@tsdash.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mhodge11/tsdash.git",
    "directory": "packages/hook"
  },
  "keywords": [
    "lodash",
    "moderndash",
    "react",
    "hooks",
    "utility",
    "helper",
    "underscore",
    "esm",
    "typescript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    ">2% and not dead"
  ],
  "license": "MIT",
  "author": "Micah Hodge <micahhodgeutk@icloud.com> (https://github.com/mhodge11)",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./lib/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@tsdash/function": "workspace:*",
    "@tsdash/types": "workspace:*",
    "@tsdash/validate": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "jsdom": "^23.0.1"
  }
}
