{
  "name": "tsdash",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.12.1",
  "engines": {
    "node": ">=18.19.0",
    "pnpm": ">=8.12.1"
  },
  "engineStrict": true,
  "scripts": {
    "build": "lerna run build",
    "build:docs": "typedoc",
    "check": "biome check ./packages",
    "check:apply": "biome check ./packages --apply",
    "format": "biome format ./packages",
    "format:write": "biome format ./packages --write",
    "lint": "biome lint ./packages",
    "lint:apply": "biome lint ./packages --apply",
    "prepare": "husky install",
    "test": "lerna run test",
    "test:dev": "vitest --ui",
    "version": "lerna version --no-private"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "biome check . --apply",
      "biome format . --write",
      "biome lint . --apply"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lerna": "^8.0.1",
    "lint-staged": "^15.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "typedoc": "^0.25.4",
    "typedoc-plugin-markdown": "^3.17.1",
    "typedoc-plugin-mdn-links": "^3.1.8",
    "vitest": "^1.1.0"
  }
}
