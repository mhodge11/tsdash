{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "types": ["bun-types", "vitest/globals"],

    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "target": "esnext",

    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,

    "baseUrl": "./",
    "paths": {
      // absolute paths
      "@array": ["src/array/index.ts"],
      "@crypto": ["src/crypto/index.ts"],
      "@decorator": ["src/decorator/index.ts"],
      "@function": ["src/function/index.ts"],
      "@number": ["src/number/index.ts"],
      "@object": ["src/object/index.ts"],
      "@promise": ["src/promise/index.ts"],
      "@string": ["src/string/index.ts"],
      "@type": ["src/type/index.ts"],
      "@validate": ["src/validate/index.ts"],

      // relative paths
      "@array/*": ["src/array/*"],
      "@crypto/*": ["src/crypto/*"],
      "@decorator/*": ["src/decorator/*"],
      "@function/*": ["src/function/*"],
      "@number/*": ["src/number/*"],
      "@object/*": ["src/object/*"],
      "@promise/*": ["src/promise/*"],
      "@string/*": ["src/string/*"],
      "@type/*": ["src/type/*"],
      "@validate/*": ["src/validate/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["./coverage/**/*", "./node_modules/**/*", "./dist/**/*"]
}
